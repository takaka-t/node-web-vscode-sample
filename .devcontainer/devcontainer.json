{
  "name": "${localWorkspaceFolderBasename}",
  "dockerComposeFile": "./docker/docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "customizations": {
    "vscode": {
      "settings": {
        // 改行コードを設定
        "files.eol": "\n",
        // 保存時にフォーマット
        "editor.formatOnSave": true,
        // フォーマッターをprettierに設定
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        // prettier設定
        "prettier.printWidth": 200,
        // jsonはVSCodeのフォーマッターを利用
        "[jsonc]": {
          "editor.defaultFormatter": "vscode.json-language-features"
        },
        // typescriptのSDKを現在ディレクトリのに指定
        "typescript.tsdk": "node_modules/typescript/lib",
        "launch": {
          "version": "0.2.0",
          "configurations": [
            {
              "type": "node",
              "request": "launch",
              "name": "back-end デバッグ",
              "skipFiles": [
                "<node_internals>/**"
              ],
              "runtimeExecutable": "${workspaceFolder}/back-end/node_modules/.bin/ts-node-dev", // ts-node-devの場所
              // "runtimeArgs": [],
              // "program": "${file}"
              "program": "${workspaceFolder}/back-end/src/server.ts" // 開始ファイル 
              // "args": []
            }
          ],
          "compounds": []
        }
      },
      "extensions": [
        // VSCode日本語化
        "MS-CEINTL.vscode-language-pack-ja",
        // フォーマッター
        "esbenp.prettier-vscode",
        // git 以下3つ
        "mhutchie.git-graph",
        "donjayamanne.githistory",
        "eamodio.gitlens",
        // vue 以下2つ
        "Vue.volar",
        "Vue.vscode-typescript-vue-plugin"
      ]
    }
  }
}